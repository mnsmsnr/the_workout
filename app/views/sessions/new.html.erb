<% provide(:title, 'login') %> 
<h1>Log in</h1>
<%= simple_form_for :sessions do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.button :submit ,"login"%>
<% end %>

<input id="copyID" type="text" value="example@sample.co.jp" readonly>
<input id="copyPassword" type="text"  value="password" readonly>
<input type="button" value="Emailコピー" onclick="copyToClipboard()">
<input type="button" value="Passwordコピー" onclick="copyToClipboard2()">

<script>
// 【!TODO】コピー用javaScript一元化
// アドレスコピー
function copyToClipboard() {
var copyTarget = document.getElementById("copyID");
copyTarget.select();
document.execCommand("Copy");
}
</script>
<script>
// パスワードコピー
function copyToClipboard2() {
var copyTarget = document.getElementById("copyPassword");
copyTarget.select();
document.execCommand("Copy");
}
</script>