<% provide(:title, 'User edit') %>
<%= link_to '戻る', 'javascript:history.back()' %>
<h1>User edit</h1>
<%= form_with model: @user do |f| %>
    <h6>【NAME】</h6>
    <%= f.text_field :name %>
    <h6>【EMAIL】</h6>
    <%= f.text_field :email %>
    <h6>【現在のPASSWORD】</h6>
    <%= f.password_field :password_before %>
    <h6>【新しいPASSWORD】</h6>
    <%= f.password_field :password %>
    <h6>【新しいPASSWORDの確認】</h6>
    <%= f.password_field :password_confirmation ,label: "confirmation" %>
    <%= f.submit "更新" %>
<% end %>