<%if logged_in?%> <!--ログイン状態-->
    <div class="container">
        <div class="row">
            <div class="col s6">
                <div class="card">
                    <div class="card-image">
                        <%= image_tag 'search.jpg' %>
                    </div>
                    <div class="card-action">
                        <%= link_to "Traning Serach", workout_index_url  %>
                    </div>
                </div>
            </div>
            <div class="col s6">
                <div class="card">
                    <div class="card-image">
                        <%= image_tag 'add.jpg' %>
                    </div>
                    <div class="card-action">
                        <%= link_to "Traning Add", workout_new_url %>
                    </div>
                </div>
            </div> 
        </div>
    </div>
<%else%><!--ログアウト状態-->
    <div class = "top_background">
        <div class = "button_center">
            <%= link_to sighup_path, class: 'waves-effect waves-light btn-large harf-transparent' do %>
                <i class="material-icons left">open_in_new</i>
                <span>登録して始める！</span>
            <% end %>
        </div>
    </div>
<%end%>
