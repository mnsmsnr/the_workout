<% @workout = Workout.new unless @workout %>

<h1>Training index</h1>

<p>検索</p>
<%= form_tag(workout_index_path,:method => 'post') do %>
  <%= text_field_tag :menu %>
  <%= select_tag(:purpose, options_for_select([["- 未選択 -", "0"],["ウエイトトレーニング", "1"], ["ダイエット", "2"], ["アクティビティ", "3"]]),{ class: "browser-default" }) %>
  <%= select_tag(:environment, options_for_select([["- 未選択 -", "0"],["ジム", "1"], ["トレーニンググッズ", "2"], ["ボディウェイト", "3"]]),{ class: "browser-default" }) %>
  <%= check_box_tag (:target) %>
  <%= label_tag (:target) %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<%= simple_form_for workout_index_path,:method => 'post' do |f| %> <!--【TODO：冗長、共通化】-->
  <%= f.input :menu %>
  <%= f.label :purpose %>
  <%= f.select :purpose, [["ウエイトトレーニング","1"],["ダイエット","2"],["アクティビティ","3"]], 
        { include_blank: true, selected: 0 }, { id: "purpose", class: "browser-default" }  %>
  <%= f.label :environment %>
  <%= f.select :environment, [["ジム","1"],["トレーニンググッズ","2"],["ボディウェイト","3"]], 
        { include_blank: true, selected: 0 }, { id: "environment", class: "browser-default" }  %>
  <%= f.label :target %>
  <%= f.select :target, [["胸","1"],["背中","2"],["腹","3"],["腕","4"],["下半身","5"],["心肺","6"]], 
        { include_blank: true, selected: 0}, { id: "target", class: "browser-default" }  %>
  <%= f.button :submit ,"Search" %>
<% end %>

<%if true%>

<!-- 【!TODO】pagenate-->
  <ul class="workouts">
    <%= render @workouts %>
  </ul>
<%end%>