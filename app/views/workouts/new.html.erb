<% content_for(:html_title) { WORK_NEW_TITLE } %>
<br>
<h1>Training new</h1>
<%= simple_form_for @workout do |f| %>
  <p class = "emphasis"><%= MENU_NAME %></p>
     <%= f.input :menu ,placeholder: MENU_NAME_PH ,label:false %>
  <p class = "emphasis"><%= UNIT %></p>
  <% units = [ALL,UNIT_1,UNIT_2] %>
  <% for i in [*1..2] %>
    <label>
        <% if i == 1 %>
          <%= f.radio_button :unit, i.to_s , checked: true %>
        <% elsif i != 1 %>
          <%= f.radio_button :unit, i.to_s %>
        <% end %>
        <span><%= units[i] %></span>
    </label>
  <% end%>
  <p class = "emphasis"><%= ENVIRONMENT %></p>
  <% environments = [ALL,ENVIRONMENT_1,ENVIRONMENT_2,ENVIRONMENT_3] %>
  <% for i in [*1..3] %>
    <label >
        <% if i == 1 %>
          <%= f.radio_button :environment, i.to_s, checked: true %>
        <% elsif i != 1 %>
          <%= f.radio_button :environment, i.to_s %>
        <% end %>
        <span><%= environments[i] %></span>
    </label>
  <% end%>
  <p class = "emphasis"><%= TARGET %></p>
  <% targets = [ALL,TARGET_1,TARGET_2,TARGET_3,TARGET_4,TARGET_5,TARGET_6,TARGET_7,TARGET_8] %>
  <% for i in [*1..8] %>
    <label>
        <% if i == 1 %>
          <%= f.radio_button :target, i.to_s, checked: true %>
        <% elsif i != 1 %>
          <%= f.radio_button :target, i.to_s %>
        <% end %>
        <span><%= targets[i] %></span>
    </label>
  <% end%>
  <p class = "emphasis"><%= PICTURE %></p>
    <% @workout.errors.full_messages.each do |msg| %>
      <%if msg.include?(IMAGE_FORMAT) %>
        <div>
          <span style="color:red"><%= msg %></span>
        </div>
      <% end%>
    <% end %>
    <%= f.file_field :image %>
  <p class = "emphasis"><%= YOUTUBE %></p>
      <%= f.text_field :video_id ,placeholder: YOUTUBE_PH %>
  <p class = "emphasis"><%= TIPS %></p>
      <%= f.input :tips, placeholder: TIPS_PH, label:false, :input_html => {:id => "heightAdjust"} %>
  <button type="submit" class="waves-effect waves-light btn black">
    <i class="material-icons left">add</i><%= CREATE %>
  </button>
<% end %>